<resources>

    <style name="app_theme_notitle" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorPrimary">#4CAF50</item>
        <item name="android:colorBackground">#222222</item>
        <item name="android:colorPrimaryDark">#388E3C</item>
        <item name="android:popupBackground">#73a86a</item>
        <item name="android:colorAccent">#8BC34A</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textColorSecondary">#727272</item>
        <item name="android:icon">@mipmap/ic_launcher</item>
        <item name="android:divider">#B6B6B6</item>
        <item name="android:statusBarColor">#00796B</item>
    </style>

    <style name="app_theme_nodisplay" parent="app_theme_notitle">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">true</item>
    </style>

</resources>
